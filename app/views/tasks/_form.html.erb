<div class="container text-dark">
<%=form_with(model:[@category, @task], local:true) do |f|%>
    <h4 class="h4-heading"><%=@category.name%></h4>
    
    <%=f.label 'Task name',class:"task-label"%>
    <%=f.text_field :name, placeholder: "Task Name",class:"form-control form-input"%>
    <%=f.label 'Task Description',class:"task-label"%>
    <%=f.text_area :description, placeholder: "Task  Description",class:"form-control form-input", id:"form-description-task"%>
    <div class="d-flex flex-column mt-2">
        
        <%=f.label :'Priority',class:"task-label"%>
        <%=f.select :priority, [['Low',1],['Medium',2],['High',3]], selected:"#{@task.priority}"%>
        <div class="d-flex mt-2">
            <div class="me-auto">
                <%=f.check_box :completed%>
                <%=f.label 'Completed',class:"task-label"%>
            </div>
            <div>
                <%=f.label :'est Pomodoro',class:"task-label mt-2"%>
                <%=f.number_field :est_pomodoro, step: 1.0, id:'task-est-pomodoro'%>
            </div>
        </div>
        

    </div>
    
    <%=f.label :'Due Date',class:"task-label"%>
    <%=f.datetime_field :due_date,class:"form-control form-input"%>
 
    
    <div class="d-flex mt-3">
    <%=f.button class:"btn btn-lg btn-emboss btn-green me-auto" do%>
        <%if @category.new_record?%>
            <i class="fas fa-plus icon"></i>New
        <%else%>
            <i class="fas fa-edit icon"></i>Update
        <%end%>
        Category
    <%end%>
    <%= link_to categories_path, class:"btn btn-lg btn-emboss btn-red" do%>
        <i class="fas fa-times icon"></i>cancel
        <%end%>
    </div>    

    <%end%>
</div>
