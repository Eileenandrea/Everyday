<%=form_with(model:@category, local:true) do |f|%>
    <%=f.label :name%>
    <%=f.text_field :name, placeholder: "Category Name"%>
    </br>
    <%=f.label 'Category color'%>
    <%=f.color_field :color, value:"#ffff66"%>
    </br>
    <%=f.label :description%>
    <%=f.text_area :description, placeholder: "Category Description"%>
    </br>

    <%=f.submit "Create Category" %>
<%end%>